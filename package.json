{
  "name": "mergewise",
  "version": "0.1.1",
  "description": "Refactor-focused code review tooling for pull requests.",
  "author": "JR-G",
  "license": "MIT",
  "packageManager": "bun@1.3.5",
  "engines": {
    "bun": ">=1.3.5"
  },
  "module": "index.ts",
  "type": "module",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JR-G/mergewise.git"
  },
  "homepage": "https://github.com/JR-G/mergewise#readme",
  "bugs": {
    "url": "https://github.com/JR-G/mergewise/issues"
  },
  "bin": {
    "mergewise": "bin/mergewise.js"
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "dev:webhook": "bun run apps/webhook-api/src/index.ts",
    "dev:worker": "bun run apps/worker/src/index.ts",
    "wt:new": "bash scripts/worktree.sh new",
    "wt:list": "bash scripts/worktree.sh list",
    "wt:remove": "bash scripts/worktree.sh remove",
    "wt:prune": "bash scripts/worktree.sh prune",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run lint && bun run typecheck && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.0",
    "eslint-plugin-tsdoc": "^0.5.0",
    "lefthook": "^2.1.0",
    "typescript": "^5.9.3"
  }
}
