{
  "name": "mergewise",
  "version": "0.1.1",
  "description": "Refactor-focused code review tooling for pull requests.",
  "author": "JR-G",
  "license": "MIT",
  "packageManager": "bun@1.3.5",
  "engines": {
    "bun": ">=1.3.5"
  },
  "module": "index.ts",
  "type": "module",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JR-G/mergewise.git"
  },
  "homepage": "https://github.com/JR-G/mergewise#readme",
  "bugs": {
    "url": "https://github.com/JR-G/mergewise/issues"
  },
  "bin": {
    "mergewise": "bin/mergewise.js"
  },
  "files": [
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "dev:webhook": "bun run apps/webhook-api/src/main.ts",
    "dev:worker": "bun run apps/worker/src/main.ts",
    "dev:site": "bun run apps/site/server.ts",
    "wt:new": "bash scripts/worktree.sh new",
    "wt:new:session": "bash scripts/worktree.sh new-session",
    "wt:list": "bash scripts/worktree.sh list",
    "wt:remove": "bash scripts/worktree.sh remove",
    "wt:cleanup:session": "bash scripts/worktree.sh cleanup-session",
    "wt:prune": "bash scripts/worktree.sh prune",
    "ops:new": "bash scripts/ops-new.sh",
    "ops:status": "bash scripts/ops-status.sh",
    "ops:start": "bun run scripts/ops.ts start",
    "ops:start-session": "bun run scripts/ops.ts start-session",
    "ops:agent": "bun run scripts/ops.ts agent",
    "ops:prompt": "bun run scripts/ops.ts prompt",
    "ops:review-ready": "bun run scripts/ops.ts review-ready",
    "ops:open-pr": "bun run scripts/ops.ts open-pr",
    "quality:gates": "bash scripts/quality-gates.sh",
    "pr:validate-body": "bash scripts/validate-pr-body.sh",
    "lint": "bunx eslint .",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:coverage:check": "bash scripts/check-coverage.sh 80",
    "prepublishOnly": "bun run lint && bun run typecheck && bun run test"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "lefthook": "^2.1.0",
    "typescript": "^5.9.3"
  }
}
